/* pages/history/history.wxss */
.hasbhistory{
  font-size: .8rem;
  text-align: center;
}
.section{
  width: 100%;
  height: 2.8rem;
  font-size: .8rem;
  overflow: hidden;
  border-top:1px solid #dad5d5;
  padding: .2rem;
  box-sizing: border-box;
  background-color: #fff;
}
.section:last-of-type{
  border-bottom:1px solid #dad5d5;
}
.time{
  color: #dad5d5;
  font-size: .6rem;
  display: flex;
  flex-direction: row-reverse;
  padding: 10rpx;
}
.bottom{
  display: flex;
  justify-content: center;
  color: #aeaaaa;
  margin-top: .5rem;
  margin-bottom: .5rem;
  font-size: .9rem;
}